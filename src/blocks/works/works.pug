include ../../data/works.data.pug

mixin works()
  - const {title, list} = worksData;

  section.section.works#works
    .container.section__inner
      +title({text: title[pageLang]})
      ul.works__list
        each item in list
          - const {title, description, id, images: {thumbnail, list}} = item;
          li.works__item(data-hystmodal=`#${id}`)
            .works__item-image
              +picture(thumbnail)
            h3.works__item-title !{title}
            p.works__item-description !{description[pageLang]}

extends ../base/layout



block variables
  - const mainPage = false
  - const pageLang = 'en';
  - const title = 'Kenan Agaev';
  - const pageDescription = 'Frontend developer from Saint-Petersburg. Portfolio site.';
  - const ogTitle = 'Kenan Agaev';
  - const ogDescription = 'Frontend developer from Saint-Petersburg. Portfolio site.';

block main
  h1.visually-hidden Kenan Agaev, front-end developer from Sain-Petersburg. Creating user interfaces with the help of React, Angular and native HTML5/CSS3
  +hero()
  +about()
  +skills()
  +works()
